# Strapi Backend Configuration
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337
NEXT_PUBLIC_CLIENT_URL=http://localhost:3000

# Private Routes Configuration
PRIVATE_ROUTES=/dashboard/**,/profile/**,/course-view/**

# Menu Configuration
HEADER_MENU_SLUG=header_navigation
FOOTER_MENU_SLUG=footer_navigation

# Pusher Configuration
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_CLUSTER=ap1

# Webhook Secrets
STRAPI_WEBHOOK_SECRET=your_webhook_secret

# Analytics Configuration
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_FB_PIXEL_ID=your_facebook_pixel_id

# Server-side Analytics Secrets
GA_MEASUREMENT_API_SECRET=your_ga_measurement_secret
FB_ACCESS_TOKEN=your_facebook_access_token

# Development Analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Contact Information
NEXT_PUBLIC_FACEBOOK_PAGE_ID=your_facebook_page_id
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com
NEXT_PUBLIC_SUPPORT_PHONE=+1234567890

# Sentry Configuration (Optional)
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_PUBLIC_DSN=your_sentry_dsn